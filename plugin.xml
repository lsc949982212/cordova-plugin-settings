<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-settings" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>settings</name>
    <js-module name="settings" src="www/settings.js">
        <clobbers target="cordova.plugins.settings"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="settings">
                <param name="android-package" value="cordova.plugin.settings.settings"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"/>
        <source-file src="src/android/settings.java" target-dir="src/cordova/plugin/settings/settings"/>
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="settings">
                <param name="ios-package" value="settings"/>
            </feature>
        </config-file>
        <source-file src="src/ios/settings.m"/>
    </platform>
</plugin>